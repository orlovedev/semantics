{
  "name": "@priestine/semantics",
  "version": "0.0.0-dev",
  "description": "CI/CD-compatible semantic versioning and releasing.",
  "main": "index.js",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "priestine-semantics": "./src/index.js"
  },
  "scripts": {
    "test": "mocha --timeout 15000 --require ts-node/register --require source-map-support/register --full-trace --bail $(find . -name '*.spec.ts' ! -ipath '*node_modules*')",
    "coverage:cover": "nyc npm test",
    "coverage:check": "nyc check-coverage --lines 0 --branches 0 --functions 0 --statements 0",
    "tslint:check": "tslint --project tslint.json -t stylish",
    "tslint:fix": "yarn tslint:check --fix",
    "prettier:check": "prettier --list-different src/**/*.ts src/*.ts",
    "prettier:fix": "prettier --write src/**/*.ts src/*.ts",
    "style:check": "yarn prettier:check && yarn tslint:check",
    "style:fix": "yarn prettier:fix && yarn tslint:fix",
    "build:docs": "typedoc --out ./docs ./src --exclude '**/*.spec.ts' --ignoreCompilerErrors --mode file",
    "build:dev": "rm -rf ./build && tsc --p tsconfig.build.json -w",
    "build:ci": "tsc",
    "start": "node src/index.js"
  },
  "keywords": [
    "ci",
    "cd",
    "semver",
    "release",
    "versioning"
  ],
  "author": {
    "email": "priestine1.dev@gmail.com",
    "name": "Sergey Orlov",
    "url": "https://priestine.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/priestine/semantics.git"
  },
  "bugs": {
    "url": "https://gitlab.com/priestine/semantics/issues"
  },
  "homepage": "https://gitlab.com/priestine/semantics#readme",
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.11.4",
    "@types/request": "^2.47.1",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "prettier": "^1.14.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.1",
    "yarn": "^1.10.1"
  },
  "nyc": {
    "include": [
      "src/**"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "json",
      "html",
      "lcov"
    ]
  },
  "dependencies": {
    "@totemish/shell": "^1.3.1",
    "request": "^2.88.0"
  }
}
